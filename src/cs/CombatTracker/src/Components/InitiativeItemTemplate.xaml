<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <DataTemplate x:Key="InitiativeItemTemplate">
        <Frame
            Margin="5"
            Padding="10"
            BorderColor="LightGray">
            <StackLayout>
                <Label
                    FontAttributes="Bold"
                    FontSize="18"
                    Text="{Binding Name}" />
                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="{Binding CurrentHealth, StringFormat='Health: {0}'}" />
                            <Span Text="{Binding MaxHealth, StringFormat='/{0}'}" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Label Text="{Binding HealthText}" />
                <Button Command="{Binding AddHealthCommand}" Text="+" />
                <Label Text="{Binding InitiativeBonus, StringFormat='Initiative Bonus: +{0}'}" />
                <Label Text="{Binding InitiativeRoll, StringFormat='Initiative Roll: {0}', FallbackValue='Not Rolled Yet'}" />
                <Label IsVisible="{Binding Description}" Text="{Binding Description}" />
            </StackLayout>
        </Frame>
    </DataTemplate>
</ResourceDictionary>