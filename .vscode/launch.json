{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": ["<node_internals>/**", "${workspaceFolder}/src/js/web/node_modules/**/*.js"],
            "program": "${workspaceFolder}/src/js/web/dist/app.js",
            "cwd": "${workspaceFolder}/src/js/web",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "preLaunchTask": "npm: build - src/js/web",
            "runtimeArgs": [
              "-r",
              "ts-node/register",
              "-r",
              "tsconfig-paths/register"
            ],
            "args": ["${workspaceFolder}/src/js/web/src/app.ts"],
            "resolveSourceMapLocations": [
              "${workspaceFolder}/**",
              "!**/node_modules/**"
            ]
        }
    ]
}